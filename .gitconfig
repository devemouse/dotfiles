[user]
   name = Dariusz Synowiec
   email = devemouse@gmail.com
[color]
   #status = always
   #branch = always
   #diff = always
   #interactive = always
   ui = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = yellow
   changed = green
   untracked = cyan
[core]
   ignoreCygwinFSTricks  = true
   autocrlf = input
   safecrlf = false
   pager = "less -r"
   editor = vim
   excludesfile = ~/.gitignore_global
[alias]
   cim  = "commit -m"
   cima = "commit -a -m"
   co   = "checkout"
   st   = "status"
   br   = "branch"
   di   = "diff --no-ext-diff"
   diw  = "diff --no-ext-diff --color-words"
   die  = "diff"
   pending = !git --no-pager log origin/master..master && echo
   lol = log --pretty=oneline --abbrev-commit --graph --decorate
   conflicts = !git ls-files --unmerged | cut -c51- | sort -u | xargs $EDITOR
   resolve = !git ls-files --unmergedmerged | cut -c51- | sort -u | xargs git add
   lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
   supdate = "submodule foreach 'git pull origin master'"
[branch]
   autosetupmerge = true
[diff]
    external = git_diff_wrapper.sh
   
